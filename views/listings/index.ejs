        <button type="submit">create new listing</button>
    </form> -->

    <div id="filters">

        <div class="tax-toggle">
            <div class="form-check-reverse form-switch">
                <input class="form-check-input" type="checkbox" id="flexSwitchCheckDefault">
                <label class="form-check-label" for="flexSwitchCheckDefault">Display taxes</label>
            </div>
        </div>

        <div class="filter ">
            <div><i class="fa-solid fa-fire"></i></div>
            <a style="text-decoration: none; color: black;" href="/editProfile">Trending</a>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-bed"></i></div>
            <p>Rooms</p>
        </div>
        <div class="filter" >
            <div><i class="fa-solid fa-mountain-city"></i></div>
            <p>Iconic Cities</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-mountain"></i></div>
            <p>Mountains</p>
        </div>
        <div class="filter ">
            <div><i class="fa-brands fa-fort-awesome"></i></div>
            <p>Castles</p>
        </div>
        <div class="filter ">
            <div><i class="fa-solid fa-person-swimming"></i></div>
            <p>Amazing Pools</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-campground"></i></div>
            <p>Camping</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-cow"></i></div>
            <p>Farms</p>
        </div>
        <div class="filter">
            <div><i class="fa-regular fa-snowflake"></i></div>
            <p>Arctic</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-igloo"></i></div>
            <p>Domes</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-ship"></i></div>
            <p>Boat</p>
        </div>
        
        
    </div>
    

    <div class="row row-cols-lg-3 row-cols-md-3 row-cols-sm-1 row-cols-1 mt-3">
        <% for(listing of allLists) { %>
            <a href="/listings/<%=listing.id%>" class="listing-link">
                <div class="card col listing-card">
                    <img class="card-img-top" src="<%=listing.image.url%>" alt="Card image cap" style="height:20rem">
                    <div class="card-img-overlay"></div>
                    <div class="card-body">
                        <p class="card-text">
                            <b><%=listing.title%> </b>
                            <br>
                            &#8377;<%=listing.price.toLocaleString("en-In")%> (per night)
                            <br>
                            <i class="tax-info"> +18% GST ( &#8377;<%= (listing.price /100 + listing.price).toLocaleString("en-In") %>)</i>
                        </p>
                    </div>
                </div>
            </a>
        <% } %>
    </div>

    <a class="show-all-listing-map" href="/listings/allListingsMap">
        Show Map <i class="fa-solid fa-map"></i>
    </a>

    <script>
        let taxSwitch = document.getElementById("flexSwitchCheckDefault");
        taxSwitch.addEventListener("click" , () => {
            let taxInfo = document.getElementsByClassName("tax-info");
            for(info of taxInfo){
                if(info.style.display != "inline"){
                    info.style.display = "inline";
                } else {
                    info.style.display = "none";
                }
            }
        });
    </script>
    <script>
        let showAllListingMap = document.querySelector('.show-all-listing-map');
        window.addEventListener('scroll', () => {
            let scrollThreshold = (document.documentElement.scrollHeight - window.innerHeight) * 0.8;

            if (window.scrollY >= scrollThreshold) {
                showAllListingMap.style.opacity = '0';
            } else {
                showAllListingMap.style.opacity = '1';
            }
        });
    </script>
    
    
    
    